<!DOCTYPE html>
<html lang="{{@site.locale}}">
<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="{{asset "css/skeleton/normalize.css"}}" />
    <link rel="stylesheet" href="{{asset "css/skeleton/skeleton.css"}}" />
    <link rel="stylesheet" href="{{asset "css/skeleton/otto-style.css"}}" />
    <script src="{{asset "js/otto-nav.js"}}" defer></script>

    <title>{{meta_title}}</title>

    {{ghost_head}}
    {{!-- Outputs important meta data and settings, should always be in <head> --}}

</head>
<body class="{{body_class}}">
    <div class="nav-menu-top">
        <header class="container">
            <nav class="nav-bar" id="main-nav-bar">
                <!-- LOGO -->
                <div class="logo">
                    <a href="{{@site.url}}" class="brand">
                        {{#if @site.logo}}
                            <img src="{{@site.logo}}" alt="{{@site.title}}" />
                        {{else}}
                            {{@site.title}}
                        {{/if}}
                    </a>
                </div>

                <!-- NAVIGATION MENU -->
                <ul class="nav-links">

                    <!-- USING CHECKBOX HACK -->
                    <input type="checkbox" id="checkbox_toggle" />
                    <label for="checkbox_toggle" class="hamburger">&#9776;</label>
  
                    <!-- NAVIGATION MENUS -->
                    <div class="menu">  
                        {{navigation}}
                        <li class="cta"><a href="#">{{@custom.cta_text}}</a></li>
                    </div>
                </ul>
            </nav>
        </header>
    </div>
    
    <main class="body-main">
        {{{body}}}
        {{!-- All content gets inserted here, index.hbs, post.hbs, etc --}}
    </main>

    <footer class="foot bg-prime">
        <div class="container">
            <div class="row">
                <div class="four columns">
                    <p><a href="index.html">
                        {{#if @site.logo}}
                            <img src="{{@site.logo}}" alt="{{@site.title}}" />
                        {{else}}
                            {{@site.title}}
                        {{/if}}
                    </a></p>
                    <p><small>email: otto@ottoriot.com</small></p>
                    <p><small>Copyright &copy; 2023</small></p>
                </div>
                <div class="four columns vert">
                    {{navigation}}
                </div>
                <div class="four columns vert">
                    {{navigation type="secondary"}}
                </div>
            </div>
        </div>
    </footer>

{{!-- <foot> --}}
{{ghost_foot}}
{{!-- Outputs important scripts - should always be included before closing body tag --}}

</body>
</html>
