<!DOCTYPE html>
<html lang="{{@site.locale}}">
<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="{{asset "css/skeleton/normalize.css"}}" />
    <link rel="stylesheet" href="{{asset "css/skeleton/skeleton.css"}}" />
    <link rel="stylesheet" href="{{asset "css/skeleton/otto-style.css"}}" />
    <script src="{{asset "js/otto-nav.js"}}" defer></script>

    <title>{{meta_title}}</title>

    {{ghost_head}}
    {{!-- Outputs important meta data and settings, should always be in <head> --}}

</head>
<body class="{{body_class}}">
    <div class="viewport">
        <header class="container">
            <nav class="nav-bar" id="main-nav-bar">
                <a class="gh-head-logo" href="{{@site.url}}">
                    {{#if @site.logo}}
                        <img src="{{@site.logo}}" alt="{{@site.title}}" />
                    {{else}}
                        {{@site.title}}
                    {{/if}}
                </a>
                {{navigation}}
                <a href="javascript:void(0);" class="icon" onClick="openDrawerMenu()">&#9776;</a>
            </nav>
        </header>
    

    <main class="body-main">
        {{{body}}}
        {{!-- All content gets inserted here, index.hbs, post.hbs, etc --}}
    </main>

    <footer class="foot contrast">
        <hr />
        <div class="container">
            <div class="row">
                <div class="four columns">
                    <p><a href="index.html">
                        {{#if @site.logo}}
                            <img src="{{@site.logo}}" alt="{{@site.title}}" />
                        {{else}}
                            {{@site.title}}
                        {{/if}}
                    </a></p>
                    <p><small>email: otto@ottoriot.com</small></p>
                    <p><small>Copyright &copy; 2023</small></p>
                </div>
                <div class="four columns vert">
                    {{navigation}}
                </div>
                <div class="four columns vert">
                    {{navigation type="secondary"}}
                </div>
            </div>
        </div>
    </footer>
</div>

{{!-- <foot> --}}
{{ghost_foot}}
{{!-- Outputs important scripts - should always be included before closing body tag --}}

</body>
</html>
